{game_entity
  (include "/properties/car.ext")
  (include "/properties/selection/vehicle.inc"  scale(1.1))
  {collider "truck"}
  {props "vehicle" "car" "wheeled" "truck" "vision_vehicle_medium"}
  {able "emit_on_attack"}
	("armor_light" args 1.0)

  ("crew_2_human")
  ("board_animation"
    place(driver)
    board_begin(board_big-highcar_driver)
    board_end(seat_driver_car)
    base(doorleft)
  )
  ("board_animation"
    place(commander)
    board_begin(board_big-highcar)
    board_end(seat_passenger)
    base(doorright)
  )
;  ("passenger_10_human_invisible")

  {boarder
    {anm "passenger"
      {forward  {begin  "board_body"} {end "seat_passenger"}}
      {reverse  {end  "emit_body" 1}}
    }
  }

  ("wheel" args "wheelright1")
  ("wheel" args "wheelleft1")
  ("wheel" args "wheelright2")
  ("wheel" args "wheelleft2")
  
  {Volume "bodyback"
    {thickness 6}
  }
  {mass 2000}
  {Chassis
    {Locomotion ("locomotion")
      {TurnRadius 4}
    }
	("car_trace" fx("tracewheel02") step(0.09) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
	("car_trace" fx("tracewheel02") step(0.09) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
  }
  {Extension "blitz3_6m.mdl"}

  {extender "inventory"
    {box
      {size 8 10}
    }
  }
    {extender "inventory"
      {box
        {clear}
      }
    }
  (mod "game:escort"
    {props "escort_truck"}
    {component "body"
      {Able {break_by_pierce 0}}
    }
    {volume "wheelright1" {thickness 4}}
    {volume "wheelleft1"  {thickness 4}}
    {volume "wheelright2" {thickness 4}}
    {volume "wheelleft2"  {thickness 4}}
  )
}
